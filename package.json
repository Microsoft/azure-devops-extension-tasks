{
  "name": "vsts-developer-tools",
  "description": "Visual Studio Team Services Build and Release Tasks for Extensions",
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/vsts-extension-build-release-tasks.git"
  },
  "keywords": [
    "vsts",
    "tfs"
  ],
  "scripts": {
    "initdev": "npm run initdev:npm",
    "initdev:npm": "npm ci & npm ci ./BuildTasks/Common && npm ci ./BuildTasks/ExtensionVersion && npm ci ./BuildTasks/InstallExtension && npm ci ./BuildTasks/IsValidExtensionAgent && npm ci ./BuildTasks/PackageExtension && npm ci ./BuildTasks/ShareExtension",
    "compile:tasks": "tsc -b ./BuildTasks/ExtensionVersion ./BuildTasks/InstallExtension ./BuildTasks/IsValidExtensionAgent ./BuildTasks/PackageExtension ./BuildTasks/ShareExtension",
    "postcompile:tasks": "npm run lint:tasks",
    "lint:tasks": "tslint -p ./BuildTasks/ExtensionVersion && tslint -p ./BuildTasks/InstallExtension && tslint -p ./BuildTasks/IsValidExtensionAgent && tslint -p ./BuildTasks/PackageExtension && tslint -p ./BuildTasks/ShareExtension",
    "package:tasks": "tfx extension create --root . --output-path dist --manifest-globs vss-extension.json",
    "build": "npm run build:tasks",
    "build:tasks": "npm run compile:tasks && npm run postcompile:tasks",
    "package": "npm run package:tasks"
  },
  "author": "Microsoft Corporation",
  "license": "MIT",
  "devDependencies": {
    "@types/core-js": "^2.5.0",
    "@types/fs-extra": "^5.0.4",
    "@types/node": "^8.10.25",
    "@types/promise-retry": "^1.1.1",
    "@types/temp": "^0.8.29",
    "@types/x2js": "0.0.27",
    "@types/xmldom": "^0.1.28",
    "copyfiles": "^1.0.0",
    "jsonfile": "4.0.0",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.5.4",
    "tfx-cli": "^0.5.14",
    "tsconfig-glob": "^0.4.3",
    "tslint": "^5.10.0",
    "typescript": "^3.0.1",
    "typestrict": "^1.0.0"
  }
}
